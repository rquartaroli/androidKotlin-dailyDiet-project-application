<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  StatusBar customized  -->
    <style name="AppThemeCustom" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/gray_2</item>
    </style>

    <style name="large_percent">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:textSize">@dimen/font_size_32</item>
    </style>

    <style name="complement_text_large_percent">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="text_large_register_number_meal">
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>

    <style name="register_text_complement">
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="text_generic_bold_size18">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="label_generic_bold">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="input_generic_style" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_input_generic</item>
        <item name="android:ems">10</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="button_generic">
        <item name="background">@drawable/ripple_button_default</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:paddingTop">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_generic_linearlayout_withbackbutton">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_24</item>
        <item name="android:paddingTop">45dp</item>
        <item name="android:paddingEnd">@dimen/padding_24</item>
        <item name="android:paddingBottom">@dimen/padding_24</item>
    </style>
</resources>